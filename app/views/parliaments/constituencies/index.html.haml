- title("#{t('constituency_plural').capitalize} - #{@parliament.date_range(date_format: '%Y')} #{t('parliament')}")
.section--primary
  .container
    %h1
      %span= t('constituency_plural').capitalize
      = link_to "#{@parliament.date_range(date_format: '%Y')} #{t('parliament')}", parliament_path(@parliament.graph_id)
    %ul.list--block
      %li
        .list--details
          %h2= link_to "A-Z", parliament_constituencies_a_z_path(@parliament.graph_id)
          %p= t('parliaments.constituencies.find_constituency_a_to_z')

%section#content
  .container
    = render partial: "pugin/elements/list", locals: {item_type: "constituencies", data: @constituencies}


